{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Typst Studio",
  "version": "0.1.0",
  "identifier": "com.typst.studio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build --release"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Typst Studio - Desktop",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "languages": ["en-US"],
        "compression": "lzma"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libwebkit2gtk-4.1-0"
        ]
      }
    },
    "macOS": {
      "minimumSystemVersion": "11.0",
      "hardenedRuntime": true,
      "frameworks": [],
      "files": {}
    }
  }
}
